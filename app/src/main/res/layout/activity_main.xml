<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/ic_dmojang_final_logo"/>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_search_et"
            android:gravity="center"
            android:hint="검색장소 입력"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </androidx.appcompat.widget.Toolbar>


<!--    스크롤뷰는 안에뷰가 한개밖에 못놓여진다!! 주의해야하는거임!!!!-->
    <HorizontalScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/toolbar"
        android:scrollbars="none">

        <!--        코드가 여기있는것으로 인지함-->
        <include layout="@layout/choice_list" />


    </HorizontalScrollView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollview"
        app:tabIndicatorColor="@color/aqua"
        app:tabSelectedTextColor="@color/aqua"
        app:tabTextColor="#FFAAAAAA">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIST" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAP" />


    </com.google.android.material.tabs.TabLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_tab"
        android:layout_marginTop="8dp"/>


    <RelativeLayout
        android:id="@+id/blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55333333"
        android:clickable="true"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/pg"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:indeterminateTint="@color/aqua"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

</RelativeLayout>